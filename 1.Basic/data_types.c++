#include<iostream>
using namespace std;

int main()
{
    int a;
    cout<<"size of int \n"<<sizeof(a);

    float b;
    cout<<"size of float "<<sizeof(b)<<endl;

    char c;
    cout<<"size of char "<<sizeof(c)<<endl;

    bool d;
    cout<<"size of bool "<<sizeof(d)<<endl;

    short int e;
    cout<<"size of shortint "<<sizeof(e)<<endl;

    long int f;
    cout<<"size of long int "<<sizeof(f)<<endl;

    return 0;

}